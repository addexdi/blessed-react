{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["ES2017"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "stripInternal": true,
    "outDir": "./dist",
    "removeComments": false,
    "importsNotUsedAsValues": "remove",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "alwaysStrict": true,
    "skipLibCheck": true
  },
  "files": ["./src/index.ts"]
}
