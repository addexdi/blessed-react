{
  "compilerOptions": {
    "target": "${TARGET}",
    "jsx": "react",
    "jsxFactory": "BlessedReact.jsx",
    "jsxFragmentFactory": "BlessedReact.Fragment",
    "lib": ["${TARGET}"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "outDir": "./dist",
    "importHelpers": true,
    "importsNotUsedAsValues": "remove",
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
  }
}
